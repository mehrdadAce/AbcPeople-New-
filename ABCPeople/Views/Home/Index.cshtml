@model AbcPeople.ViewModels.HomepageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h4>Laatst aangepaste profielen</h4>

    <div class="row">
        <div class="col-lg-7">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    @{
                        if (Model.LastProfileAdjustments != null)
                        {
                            @foreach (var profileAdjustment in Model.LastProfileAdjustments)
                            {
                                <div class="carousel-item">
                                    <img class="img-fluid mx-auto d-block rounded" src="./images/Unknown-female.jpg" alt="Third slide">
                                    <br />
                                    <div class="carousel-caption p-0 carousel-caption-style" style="color: black !important; padding: 0 !important; position: relative !important; left: 0% !important; background: rgb(248,247,250) !important; background: radial-gradient(circle, rgba(248,247,250,1) 0%, rgba(7,7,20,0.8491771708683473) 50%, rgba(244,250,251,1) 100%) !important;">
                                        <h5 class="p-0 m-0">@profileAdjustment.Employee.FirstName @profileAdjustment.Employee.LastName</h5>
                                        <p class="p-0 m-0">Aangepast op: @profileAdjustment.Timestamp.ToString("dd/MM/yyyy")</p>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-lg-5">
            <div class="card" style="width: 21rem;">
                <div class="card-header">
                    <strong>Verjaardagen</strong>
                </div>
                <table class="table table-striped">
                    <tbody>
                        @foreach (var employee in @Model.Employees)
                        {
                            <tr>
                                <td><a href="#">@employee.FirstName @employee.LastName</a> wordt @(DateTime.Now.Year - employee.DateOfBirth.Year)</td>
                                <td>
                                    @employee.DateOfBirth.Day @System.Globalization.CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(employee.DateOfBirth.Month)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
