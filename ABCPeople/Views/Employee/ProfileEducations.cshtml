@model AbcPeople.BDO.Entities.Employee;

<ul class="nav nav-tabs ">
    <li class="nav-item">
        <a class="nav-link" href="/Employee/ProfileInfo">Info</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Employee/ProfileWorkExperiences">Werkervaringen</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Employee/ProfileCompetencies">Competenties</a>
    </li>
    <li class="nav-item active">
        <a class="nav-link active" href="/Employee/ProfileEducations">Opleidingen</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="/Employee/ProfileCV">CV</a>
    </li>
</ul>

<div class="container mt-2">
    <h5>Mijn overige gegevens</h5>
    <div id="accordion">
        <div class="card">
            <div class="card-header p-0" id="headingThree">
                <button class="btn btn-link collapsed btn-block" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="float-left">Talenkennis</span>
                </button>
            </div>
            <div id="collapseThree" class="show" aria-labelledby="headingThree" data-parent="#accordion">
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th class="p-1 pl-2" style="width: 22% !important;"></th>
                            <th class="p-1 pl-2" style="width: 22% !important;">Lezen</th>
                            <th class="p-1 pl-2" style="width: 22% !important;">Schrijven</th>
                            <th class="p-1 pl-2" style="width: 22% !important;">Spreken</th>
                            <th class="p-1 pl-2" style="width: 6% !important;"></th>
                            <th class="p-1 pl-2" style="width: 6% !important;"></th>
                        </tr>
                        <tr>
                            <td class="p-1 pl-2">Engels</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="fas fa-edit"></i></a></td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                        <tr>
                            <td class="p-1 pl-2">Frans</td>
                            <td class="p-1 pl-2">Basis</td>
                            <td class="p-1 pl-2">Basis</td>
                            <td class="p-1 pl-2">Basis</td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="fas fa-edit"></i></a></td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                        <tr>
                            <td class="p-1 pl-2">Nederlands</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2">Zeer goed</td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="fas fa-edit"></i></a></td>
                            <td class="p-1 pl-2 text-center"><a href="#" class="btn rounded p-0"><i class="far fa-trash-alt"></i></a></td>
                        </tr>
                    </table>
                    <a href="/Employee/AddLanguageSkills" class="btn btn-primary float-right mb-2"><i class="fas fa-plus"></i> Talenkennis toevoegen</a>
                </div>
            </div>
        </div>
    </div>
    <div id="accordion">
        <div class="card">
            <div class="card-header p-0" id="headingCertificates">
                <button class="btn btn-link collapsed btn-block" data-toggle="collapse" data-target="#collapseCertificates" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="float-left">Certificaten</span>
                </button>
            </div>
            <div id="collapseCertificates" class="show" aria-labelledby="headingCertificates" data-parent="#accordion">
                <div class="card-body">
                    <div>
                        <table class="table table-striped">
                            @foreach (var employeeCertificate in @Model.EmployeeCertificates)
                            {
                                <tr>
                                    <th class="p-1 pl-1" scope="row">@employeeCertificate.Certificate.Title</th>
                                    <td class="p-1 pl-1">@employeeCertificate.Date.ToString("dd/mm/yyyy")</td>
                                </tr>
                            }
                        </table>
                    </div>
                    <a href="/Employee/ShowAddCertification" class="btn btn-primary float-right mb-2"><i class="fas fa-plus"></i> Certificaat toevoegen</a>
                </div>
            </div>
        </div>
    </div>
    <div id="accordion">
        <div class="card">
            <div class="card-header p-0" id="headingCources">
                <button class="btn btn-link collapsed btn-block" data-toggle="collapse" data-target="#collapseCources" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="float-left">Cursussen</span>
                </button>
            </div>
            <div id="collapseCources" class="show" aria-labelledby="headingCources" data-parent="#accordion">
                <div class="card-body">
                    <div>
                        Er werden nog geen cursussen opgegeven.
                    </div>
                    <a href="/Employee/ShowAddCourseView" class="btn btn-primary float-right mb-2"><i class="fas fa-plus"></i> Cursus toevoegen</a>
                </div>
            </div>
        </div>
    </div>
    <div id="accordion">
        <div class="card">
            <div class="card-header p-0" id="headingExams">
                <button class="btn btn-link collapsed btn-block" data-toggle="collapse" data-target="#collapseExams" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="float-left">Examens</span>
                </button>
            </div>
            <div id="collapseExams" class="show" aria-labelledby="headingExams" data-parent="#accordion">
                <div class="card-body">
                    <div>
                        <table class="table table-striped">
                            @foreach (var employeeExam in @Model.EmployeeExams)
                            {
                                <tr>
                                    <th class="p-1 pl-1" scope="row">@employeeExam.Exam.Title</th>
                                    <td class="p-1 pl-1">@employeeExam.Date.ToString("dd/mm/yyyy")</td>
                                </tr>
                            }
                        </table>
                    </div>
                    <a href="/Employee/ShowAddEmployeeExamView" class="btn btn-primary float-right mb-2"><i class="fas fa-plus"></i> Examen toevoegen</a>
                </div>
            </div>
        </div>
    </div>
    <div id="accordion">
        <div class="card">
            <div class="card-header p-0" id="headingEducation">
                <button class="btn btn-link collapsed btn-block" data-toggle="collapse" data-target="#collapseEducation" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="float-left">Opleidingen</span>
                </button>
            </div>
            <div id="collapseEducation" class="show" aria-labelledby="headingEducation" data-parent="#accordion">
                <div class="card-body">
                    <div>
                        Nog geen examens afgelegd.
                    </div>
                    <a href="/Employee/AddEducation" class="btn btn-primary float-right mb-2"><i class="fas fa-plus"></i> Opleiding toevoegen</a>
                </div>
            </div>
        </div>
    </div>
</div>